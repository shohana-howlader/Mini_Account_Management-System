@model Mini_Account_Management_System.Models.Screen

@{
    ViewData["Title"] = "Delete Screen";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Screen
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this screen? This action cannot be undone.
                        All associated permissions will also be deleted.
                    </div>

                    <h4 class="text-danger">Screen Details:</h4>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Screen ID:</strong>
                        </div>
                        <div class="col-md-9">
                            <span class="badge bg-primary">@Html.DisplayFor(model => model.Id)</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>
                                <i class="fas fa-desktop"></i> Screen Name:
                            </strong>
                        </div>
                        <div class="col-md-9">
                            <h5 class="text-danger">@Html.DisplayFor(model => model.ScreenName)</h5>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>
                                <i class="fas fa-link"></i> URL:
                            </strong>
                        </div>
                        <div class="col-md-9">
                            @if (!string.IsNullOrEmpty(Model.URL))
                            {
                                <span class="text-muted">@Html.DisplayFor(model => model.URL)</span>
                            }
                            else
                            {
                                <span class="text-muted">No URL specified</span>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Yes, Delete Screen
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation dialog
        document.querySelector('form').addEventListener('submit', function (e) {
            if (!confirm('Are you absolutely sure you want to delete this screen? This action cannot be undone!')) {
                e.preventDefault();
            }
        });
    </script>
}