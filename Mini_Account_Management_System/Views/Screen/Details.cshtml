@model Mini_Account_Management_System.Models.Screen

@{
    ViewData["Title"] = "Screen Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-eye"></i> Screen Details
                    </h3>
                </div>
                <div class="card-body">
                   

                    <div class="row">
                        <div class="col-md-3">
                            <strong>
                                <i class="fas fa-desktop"></i> Screen Name:
                            </strong>
                        </div>
                        <div class="col-md-9">
                            <h5 class="text-primary">@Html.DisplayFor(model => model.ScreenName)</h5>
                        </div>
                    </div>
                    <hr>

                    <div class="row">
                        <div class="col-md-3">
                            <strong>
                                <i class="fas fa-link"></i> URL:
                            </strong>
                        </div>
                        <div class="col-md-9">
                            @if (!string.IsNullOrEmpty(Model.URL))
                            {
                                <a href="@Model.URL" target="_blank" class="btn btn-outline-primary btn-sm">
                                    @Html.DisplayFor(model => model.URL)
                                    <i class="fas fa-external-link-alt ms-1"></i>
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No URL specified</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>