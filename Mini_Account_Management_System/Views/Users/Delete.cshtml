@model Mini_Account_Management_System.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete User
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Html.DisplayFor(model => model.Id)</span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.FullName)</strong>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName)</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.UserName)</strong>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Password)</dt>
                        <dd class="col-sm-9">
                            <div class="d-flex align-items-center">
                                <span class="password-masked" id="password-masked">
                                    @(new string('*', Math.Min(Model.Password.Length, 8)))
                                </span>
                                <span class="password-visible d-none" id="password-visible">
                                    @Html.DisplayFor(model => model.Password)
                                </span>
                                <button type="button" class="btn btn-sm btn-link text-muted ms-2" onclick="togglePasswordVisibility()" title="Show/Hide Password">
                                    <i class="fas fa-eye" id="eye-icon"></i>
                                </button>
                            </div>
                        </dd>

                        

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePasswordVisibility() {
        const maskedElement = document.getElementById('password-masked');
        const visibleElement = document.getElementById('password-visible');
        const eyeIcon = document.getElementById('eye-icon');

        if (maskedElement.classList.contains('d-none')) {
            // Currently showing password, hide it
            maskedElement.classList.remove('d-none');
            visibleElement.classList.add('d-none');
            eyeIcon.classList.remove('fa-eye-slash');
            eyeIcon.classList.add('fa-eye');
        } else {
            // Currently hiding password, show it
            maskedElement.classList.add('d-none');
            visibleElement.classList.remove('d-none');
            eyeIcon.classList.remove('fa-eye');
            eyeIcon.classList.add('fa-eye-slash');
        }
    }
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>