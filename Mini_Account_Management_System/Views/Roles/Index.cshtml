@model IEnumerable<Mini_Account_Management_System.Models.Role>
@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Role Management</h4>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Role
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Role Name</th>
                                    <th>Users Count</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Id)</span>
                                        </td>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.RoleName)</strong>
                                        </td>
                                        <td>
                                            @if (item.Users.Any())
                                            {
                                                <span class="badge bg-success">@item.Users.Count Users</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No Users</span>
                                            }
                                        </td>
                                        <td>
                                            <i class="fas fa-calendar-alt text-muted me-1"></i>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (!item.Users.Any())
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this role?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-danger" disabled title="Cannot delete role with assigned users">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No roles found</h5>
                            <p class="text-muted">Click "Add New Role" to create your first role.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>