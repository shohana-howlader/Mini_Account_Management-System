@model Mini_Account_Management_System.Models.Role
@{
    ViewData["Title"] = "Role Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Role Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Html.DisplayFor(model => model.Id)</span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoleName)</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.RoleName)</strong>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>

                        <dt class="col-sm-3">Assigned Users</dt>
                        <dd class="col-sm-9">
                            @if (Model.Users.Any())
                            {
                                <span class="badge bg-success mb-2">@Model.Users.Count Users Assigned</span>
                                <div class="mt-2">
                                    @foreach (var user in Model.Users)
                                    {
                                        <span class="badge bg-info me-1 mb-1">@user.UserName</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No Users Assigned</span>
                            }
                        </dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        @if (!Model.Users.Any())
                        {
                            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-danger" disabled title="Cannot delete role with assigned users">
                                <i class="fas fa-trash"></i> Delete (Users Assigned)
                            </button>
                        }
                    </div>
                </div>
            </div>

            @if (Model.Users.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Users with this Role</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>User ID</th>
                                        <th>Username</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@user.Id</span></td>
                                            <td>@user.UserName</td>
                                            <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>