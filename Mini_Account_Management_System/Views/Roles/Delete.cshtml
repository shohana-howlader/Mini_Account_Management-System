@model Mini_Account_Management_System.Models.Role
@{
    ViewData["Title"] = "Delete Role";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Role
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this role? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Html.DisplayFor(model => model.Id)</span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoleName)</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.RoleName)</strong>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>

                        <dt class="col-sm-3">Assigned Users</dt>
                        <dd class="col-sm-9">
                            @if (Model.Users.Any())
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <strong>Cannot Delete!</strong> This role is assigned to @Model.Users.Count user(s).
                                    <div class="mt-2">
                                        @foreach (var user in Model.Users.Take(5))
                                        {
                                            <span class="badge bg-danger me-1">@user.UserName</span>
                                        }
                                        @if (Model.Users.Count > 5)
                                        {
                                            <span class="text-muted">...and @(Model.Users.Count - 5) more</span>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-success">No Users Assigned - Safe to Delete</span>
                            }
                        </dd>
                    </dl>

                    @if (!Model.Users.Any())
                    {
                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Confirm Delete
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="mt-4">
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle"></i>
                                To delete this role, first reassign or remove all associated users.
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a asp-controller="Users" asp-action="Index" class="btn btn-primary">
                                    <i class="fas fa-users"></i> Manage Users
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- External CSS and JS Dependencies -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

<script>
    // Add confirmation dialog for delete action
    document.addEventListener('DOMContentLoaded', function() {
        const deleteForm = document.querySelector('form[asp-action="Delete"]');
        if (deleteForm) {
            deleteForm.addEventListener('submit', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this role? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        }
    });
</script>

